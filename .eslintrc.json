{
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "jest": true
    },
    "globals": {
        "PRODUCTION": true
    },
    "extends": "eslint:recommended",
    "installedESLint": true,
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "comma-dangle": ["error", "never"],

        "react/jsx-uses-vars": "error",
        "react/jsx-uses-react": "error"
    }
}
